{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@2.15.10"
    }
  },
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/$1" 
    },
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/[^.]+", 
      "dest": "/", 
      "status": 200 
    }
  ]
}